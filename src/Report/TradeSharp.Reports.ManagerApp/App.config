<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <log4net>
    <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
      <file value="log-file.txt"/>
      <appendToFile value="true"/>
      <maximumFileSize value="100KB"/>
      <maxSizeRollBackups value="5"/>
      <rollingStyle value="once"/>
      <encoding value="windows-1251"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%level: %date [%thread] %logger{1} - %message%newline"/>
      </layout>
    </appender>

    <root>
      <priority value="DEBUG"/>
      <appender-ref ref="RollingFile"/>
    </root>

  </log4net>

  <system.serviceModel>
    <bindings>
      <netTcpBinding>
        <binding name="OpenNetTcpBinding" closeTimeout="00:04:00" openTimeout="00:04:00" receiveTimeout="00:10:00" sendTimeout="00:04:00" transactionFlow="false" hostNameComparisonMode="StrongWildcard" maxBufferPoolSize="524288" maxReceivedMessageSize="100000000">
          <readerQuotas maxDepth="32" maxStringContentLength="10000000" maxArrayLength="100000000" maxBytesPerRead="4096" maxNameTableCharCount="16384"/>
          <security mode="None"/>
        </binding>
      </netTcpBinding>
      <basicHttpBinding>
          <binding name="OpenNetHttpBinding" closeTimeout="00:01:00" openTimeout="00:01:00" receiveTimeout="00:10:00" sendTimeout="00:01:00" hostNameComparisonMode="StrongWildcard" maxBufferPoolSize="524288" maxReceivedMessageSize="100000000">
            <readerQuotas maxDepth="32" maxStringContentLength="10000000" maxArrayLength="100000000" maxBytesPerRead="4096" maxNameTableCharCount="16384"/>
            <security mode="None"/>
          </binding>
        </basicHttpBinding>      
    </bindings>

    <client>
      <endpoint address="http://70.38.11.49:55059/AccountEfficiency" binding="basicHttpBinding" 
                bindingConfiguration="OpenNetHttpBinding" contract="TradeSharp.SiteBridge.Lib.Contract.IAccountStatistics" 
                name="IAccountStatisticsBinding"/>
      <endpoint address="net.tcp://10.5.237.10:55101/IndexGrabber" binding="netTcpBinding" 
                bindingConfiguration="OpenNetTcpBinding" contract="TradeSharp.Reports.Lib.Contract.IIndexGrabber" 
                name="IIndexGrabberBinding" behaviorConfiguration="Behaviors.EndpointBehavior">
      </endpoint>
    </client>

    <behaviors>
      <endpointBehaviors>
        <behavior name="Behaviors.EndpointBehavior">
          <dataContractSerializer maxItemsInObjectGraph="2147483647"/>
        </behavior>
      </endpointBehaviors>
    </behaviors>
  </system.serviceModel>

  <appSettings>
    <add key="PDF.MakerPath" value="d:\Temp\Отчеты\makepdf\wkhtmltopdf.exe"/>    
  </appSettings>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>
</configuration>
