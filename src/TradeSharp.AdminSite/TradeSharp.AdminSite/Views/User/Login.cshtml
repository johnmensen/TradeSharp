@model TradeSharp.SiteAdmin.Models.User.UserModel

@using TradeSharp.SiteAdmin.App_GlobalResources
@{
    Layout = null;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>@Resource.PageTitleLogin</title>
    <link rel="stylesheet" href="/css/button.css" type="text/css" media="screen" title="default" />
    <link rel="stylesheet" href="/css/screen.css" type="text/css" media="screen" title="default" />
    <!--  jquery core -->
    <script src="/js/jquery/jquery-1.4.1.min.js" type="text/javascript"></script>
    <!-- Custom jquery scripts -->
    <script src="/js/jquery/custom_jquery.js" type="text/javascript"></script>
    <!-- MUST BE THE LAST SCRIPT IN <HEAD></HEAD></HEAD> png fix -->
    <script src="/js/jquery/jquery.pngFix.pack.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(document).pngFix();
            
            $('#linkLogin').click(function () {
                $('#SubmitForm').submit();
                return false;
            });
        });
    </script>
</head>
<body id="login-bg">
    <!-- Start: login-holder -->
    <div id="login-holder">
        <!-- start logo -->
        <div id="logo-login">
            <a href="index.html">
                <img src="/images/shared/logo.png" width="156" height="40" alt="" /></a>
        </div>
        <!-- end logo -->
        <div class="clear">
        </div>
        <!--  start loginbox ................................................................................. -->
        <div id="loginbox">
            <!--  start login-inner -->
            <div id="login-inner">
                @{ Html.EnableClientValidation(); }
                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "SubmitForm", name = "SubmitForm" }))
                {
                <table border="0" cellpadding="0" cellspacing="0">
                    <tr>
                        <td colspan="2" style="padding: 10px; color: #660b0b; font-weight: bold;">
                            @Html.ValidationSummary()
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.LabelFor(x => x.Login)
                        </th>
                        <td>
                            @Html.TextBoxFor(x => x.Login, new { @class = "login-inp" })
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.LabelFor(x => x.Password)
                        </th>
                        <td>
                            @Html.PasswordFor(x => x.Password, new { @class = "login-inp" })
                        </td>
                    </tr>
                    <tr>
                        <th>
                        </th>
                        <td>                      
                            <a class="ml-button-2" href="/" id="linkLogin">@Resource.Enter</a>
                        </td>
                    </tr>
                </table>
                }
            </div>
            <!--  end login-inner -->
            <div class="clear">
            </div>
        </div>
        <!--  end loginbox -->
    </div>
    <!-- End: login-holder -->
</body>
</html>